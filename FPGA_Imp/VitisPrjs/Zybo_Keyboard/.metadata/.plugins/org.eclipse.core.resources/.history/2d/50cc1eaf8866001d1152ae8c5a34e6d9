	while(1){
		// Convert data to a buffer of 32 bits.
		//itoa(Xil_In32(PS2_Keyboard_Base)& PS2_Data_Mask,ascii_data,2);
		//sleep(1);
	}

    return 0;
}



void sleep(int n) {
	for(int j=0;j<n;j++){
		//Assuming 100MHz clock, delay for 1sec
		for(int i=0;i<(100000000/50);i++);
	}
}
